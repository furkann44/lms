@model IEnumerable<KutuphaneOtomasyonu.Models.YayinEvi>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Yeni Kayıt Oluştur</a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            Id
        </th>
        <th>
            Ad
        </th>
        <th>
            Adres
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(yayinEvi => item.Id)
        </td>
        <td>
            @Html.DisplayFor(yayinEvi => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(yayinEvi => item.Adres.Ilce)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinecek Emin Misiniz ?')">Sil</a>
        </td>
    </tr>
    }
</table>