@model KutuphaneOtomasyonu.Models.YayinEvi
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Ad" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
            <label asp-for="AdresId" class="col-md-2 control-label"></label>
                <select asp-for="AdresId" class="form-control" asp-items="ViewBag.AdresId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Edit" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

