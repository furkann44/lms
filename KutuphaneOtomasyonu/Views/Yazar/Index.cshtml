@model IEnumerable<KutuphaneOtomasyonu.Models.Yazar>
@{
    ViewData["Title"] = "Index";
}

<h1>Yazar</h1>

<p>
    <a asp-action="Create">Yeni Kayıt Oluştur</a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biyografi)
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(yazar => item.Id)
        </td>
        <td>
            @Html.DisplayFor(yazar => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(yazar => item.Biyografi)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinecek Emin Misiniz')">Sil</a>
        </td>
    </tr>
    }
</table>