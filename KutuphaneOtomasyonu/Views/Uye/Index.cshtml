@model IEnumerable<KutuphaneOtomasyonu.Models.Uye>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" onclick="MementoRestore()" >Yeni Kayıt Oluştur</a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            Ad Soyad
        </th>
        <th>
            Telefon
        </th>
        <th>
            Cinsiyet
        </th>
        <th>
            Kutuphane Adı
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(uye => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(uye => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(uye => item.Cinsiyet)
        </td>
        <td>
            @Html.DisplayFor(uye => item.Kutuphane.Ad)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinecek Emin Misiniz ?')">Sil</a>
        </td>
    </tr>
    }
</table>
