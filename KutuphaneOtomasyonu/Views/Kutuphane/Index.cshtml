@model IEnumerable<KutuphaneOtomasyonu.Models.Kutuphane>
@{
    ViewData["Title"] = "Index";
}

<h1>Kütüphaneler</h1>
<p>
    <a asp-action="Create">Yeni Kayıt Oluştur</a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            Id
        </th>
        <th>
            Ad
        </th>
        <th>
            Adres
        </th>
        <th>
            Adres Tarifi
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(kutuphane => item.Id)
            </td>
            <td>
                @Html.DisplayFor(kutuphane => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(kutuphane => item.Adres.Ilce)
            </td>
            <td>
                @Html.DisplayFor(kutuphane => item.Adres.AdresTarifi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinecek emin misiniz')">Sil</a>
            </td>
        </tr>
    }
</table>
